image: docker:latest

services:
  - docker:dind

stages:
  - deploy

deploy_dev_front_rzf:
  stage: deploy
  script:
    - apk update -qq
    - apk add -qq git
    - 'which ssh-agent || ( apk add -qq openssh-client )'
    - eval $(ssh-agent -s)
    - echo "$SSH_PRIVATE_KEY_DEV" | ssh-add -
    - mkdir -p ~/.ssh
    - '[[ -f /.dockerenv ]] && echo -e "Host *\n\tStrictHostKeyChecking no\n\n" > ~/.ssh/config'
#    - ssh deploy@194.67.108.231 "cd /home/deploy/na-rzf-front-react && python3 -m pip install --upgrade pip && pip install -r ./app/requirements.txt"
    - ssh deploy@194.67.108.231 "cd /home/deploy/na-rzf-front-react && git fetch --all && git checkout $CI_COMMIT_TAG && git pull --force && docker compose -f docker-compose.prod.yml up -d && exit"
  when: always

